<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="YourCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- TOOLBAR COLOR. -->
        <item name="colorPrimary">#013448</item>
        <!--FIELDS HIGHLIGHT COLOR-->
        <item name="colorAccent">#5a5e5d</item>
        <!--PAY/DONE BUTTON COLOR-->
        <item name="colorButtonNormal">#81C1B4</item>
        <!--HELPER LABELS AND UNSELECTED FIELD COLOR-->
        <item name="colorControlNormal">#5a5e5d</item>
    </style>

    <style name="YourCustomDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- STATUS BAR COLOR. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- TOOLBAR COLOR. -->
        <item name="colorPrimary">#303A45</item>
        <!--FIELDS HIGHLIGHT COLOR-->
        <item name="colorAccent">#4382AC</item>
        <!--PAY/DONE BUTTON COLOR-->
        <item name="colorButtonNormal">#0285F9</item>
        <!--HELPER LABELS AND FIELD COLOR-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <!--EDIT TEXT COLOR-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--HINTS COLOR-->
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

</resources>
